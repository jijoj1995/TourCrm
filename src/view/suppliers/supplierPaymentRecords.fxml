<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXTextArea?>
<?import com.jfoenix.controls.JFXTextField?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="customerPaymentHistoryMainPane" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.suppliers.SupplierPaymentRecords">
   <children>
      <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox VBox.vgrow="ALWAYS">
               <children>
                  <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
                     <children>
                        <Label alignment="TOP_CENTER" prefHeight="31.0" prefWidth="208.0" text="Supplier Summary" underline="true" VBox.vgrow="ALWAYS">
                           <font>
                              <Font name="System Bold" size="21.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
                  <VBox alignment="TOP_RIGHT" prefWidth="450.0" HBox.hgrow="ALWAYS">
                     <children>
                        <VBox alignment="TOP_RIGHT" VBox.vgrow="ALWAYS">

                              <FontAwesomeIconView fill="#022f02" glyphName="ARROW_CIRCLE_LEFT" onMouseClicked="#backToBillingPage" size="50" strokeType="OUTSIDE" strokeWidth="0.0" VBox.vgrow="ALWAYS">
                                 <cursor>
                                    <Cursor fx:constant="HAND" />
                                 </cursor>
                              </FontAwesomeIconView>

                           <VBox.margin>
                              <Insets right="20.0" />
                           </VBox.margin>
                        </VBox>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <VBox>
               <children>
                  <HBox maxHeight="10.0" nodeOrientation="LEFT_TO_RIGHT" styleClass="billingSectionHeading" VBox.vgrow="NEVER">
                     <children>
                        <Label styleClass="detailsVboxLabel" text="Supplier Details" textFill="#f8f1f1" HBox.hgrow="ALWAYS" />
                        <FontAwesomeIconView fill="#e7f8e0" glyphName="ANGLE_DOUBLE_DOWN" glyphSize="24" size="20" HBox.hgrow="ALWAYS" />
                     </children>
                     <padding>
                        <Insets left="70.0" />
                     </padding>
                     <VBox.margin>
                        <Insets bottom="5.0" />
                     </VBox.margin>
                  </HBox>
                  <HBox VBox.vgrow="ALWAYS">
                     <children>
                        <VBox spacing="20.0" styleClass="detailsVbox" HBox.hgrow="ALWAYS">
                           <children>
                              <HBox nodeOrientation="LEFT_TO_RIGHT" spacing="70.0" VBox.vgrow="ALWAYS">
                                 <children>
                                    <HBox HBox.hgrow="ALWAYS">
                                       <children>
                                          <Label prefHeight="27.0" prefWidth="100.0" styleClass="detailsVboxLabel" text="Name:" HBox.hgrow="ALWAYS" />
                                          <JFXTextField fx:id="customerName" disable="true" prefColumnCount="0" prefHeight="25.0" prefWidth="177.0" promptText="Enter Name..." HBox.hgrow="ALWAYS" />
                                       </children>
                                       <opaqueInsets>
                                          <Insets right="10.0" />
                                       </opaqueInsets>
                                       <HBox.margin>
                                          <Insets />
                                       </HBox.margin>
                                    </HBox>
                                    <HBox HBox.hgrow="ALWAYS">
                                       <children>
                                          <Label prefHeight="25.0" prefWidth="100.0" styleClass="detailsVboxLabel" text="Phone No:" HBox.hgrow="ALWAYS" />
                                          <JFXTextField fx:id="customerPhone" disable="true" prefHeight="25.0" prefWidth="150.0" promptText="Enter 10 digit number..." HBox.hgrow="ALWAYS" />
                                       </children>
                                    </HBox>
                                 </children>
                              </HBox>
                              <HBox layoutX="10.0" layoutY="10.0" nodeOrientation="LEFT_TO_RIGHT" spacing="70.0" VBox.vgrow="ALWAYS">
                                 <children>
                                    <HBox alignment="BOTTOM_LEFT" HBox.hgrow="ALWAYS">
                                       <children>
                                          <Label prefHeight="25.0" prefWidth="100.0" styleClass="detailsVboxLabel" text="Address:" HBox.hgrow="ALWAYS" />
                                          <JFXTextArea fx:id="customerAddress" cache="true" disable="true" prefHeight="50.0" prefWidth="150.0" promptText="Enter Address..." HBox.hgrow="ALWAYS" />
                                       </children>
                                    </HBox>
                                 </children>
                              </HBox>
                           </children>
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                           <padding>
                              <Insets left="50.0" right="50.0" />
                           </padding>
                        </VBox>
                     </children>
                     <VBox.margin>
                        <Insets top="15.0" />
                     </VBox.margin>
                  </HBox>
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </VBox>
            <HBox id="HBox" alignment="CENTER" spacing="15.0" VBox.vgrow="ALWAYS">
               <children>
                  <Label text="Filter Table:" />
                  <JFXTextField fx:id="filterField" prefHeight="25.0" prefWidth="300.0" />
                  <Label text="From date:" />
                  <DatePicker fx:id="fromPaymentDate" />
                  <Button fx:id="rowsUpdateButton" mnemonicParsing="false" onAction="#updatePaymentRows" styleClass="buttonPrimary" text="Update" />
                  <Button fx:id="reportPrint" mnemonicParsing="false" onAction="#generateReport" styleClass="buttonPrimary" text="Genrate Report" />
               </children>
               <VBox.margin>
                  <Insets left="20.0" right="20.0" top="30.0" />
               </VBox.margin>
            </HBox>
            <TableView fx:id="table" tableMenuButtonVisible="false" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="paymentIdColumn" maxWidth="5000.0" minWidth="10.0" prefWidth="120.0" text="Payment ID" />
                  <TableColumn fx:id="createdOnDate" maxWidth="5000.0" minWidth="10.0" prefWidth="120.0" text="Date" />
                  <TableColumn fx:id="totalAmountColumn" maxWidth="5000.0" minWidth="10.0" prefWidth="120.0" text="Total Amount" />
                  <TableColumn fx:id="payedAmountColumn" maxWidth="5000.0" minWidth="10.0" prefWidth="120.0" text="Payed Amount" />
                  <TableColumn fx:id="pendingAmountColumn" maxWidth="5000.0" minWidth="10.0" prefWidth="120.0" text="Pending Amount" />
                  <TableColumn fx:id="billingDateColumn" maxWidth="5000.0" minWidth="10.0" prefWidth="120.0" text="Billing Date" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <VBox.margin>
                  <Insets bottom="20.0" top="20.0" />
               </VBox.margin>
            </TableView>
         </children>
      </VBox>
   </children>
</AnchorPane>
