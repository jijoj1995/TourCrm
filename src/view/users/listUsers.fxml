<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="mainPane" prefHeight="400.0" prefWidth="600.0" stylesheets="/resource/css/listcustomer.css" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.users.ListUsers">
   <children>
      <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <center>
            <VBox layoutX="10.0" layoutY="50.0">
               <children>
                  <HBox id="HBox" alignment="CENTER" spacing="2.0">
                     <children>
                        <Label text="Search" underline="true" HBox.hgrow="ALWAYS">
                           <font>
                              <Font name="Verdana" size="14.0" />
                           </font>
                        </Label>
                        <FontAwesomeIconView fill="#022f02" glyphName="SEARCH" layoutX="471.0" layoutY="53.0" onMouseClicked="#showEditUserPage" size="15" strokeType="OUTSIDE" strokeWidth="0.0">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </FontAwesomeIconView>
                        <TextField fx:id="filterField" />
                        <Label layoutX="398.0" layoutY="27.0" text="Add User" underline="true">
                           <font>
                              <Font name="Arial" size="14.0" />
                           </font>
                        </Label>
                        <FontAwesomeIconView fill="#022f02" glyphName="PLUS_CIRCLE" onMouseClicked="#showEditUserPage" size="20" strokeType="OUTSIDE" strokeWidth="0.0">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </FontAwesomeIconView>
                     </children>
                     <VBox.margin>
                        <Insets bottom="20.0" right="20.0" />
                     </VBox.margin>
                  </HBox>
                  <TableView fx:id="usersTable" style="-fx-border-radius: 100;" tableMenuButtonVisible="false" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="idColumn" maxWidth="5000.0" minWidth="10.0" prefWidth="50.0" styleClass="tableColumnRounded" text="ID" />
                        <TableColumn fx:id="firstNameColumn" maxWidth="5000.0" minWidth="10.0" prefWidth="250.0" text="FIRST NAME" />
                        <TableColumn fx:id="lastNameColumn" maxWidth="5000.0" minWidth="10.0" prefWidth="250.0" text="LAST NAME" />
                        <TableColumn fx:id="emailColumn" maxWidth="5000.0" minWidth="10.0" prefWidth="150.0" text="EMAIL" />
                        <TableColumn fx:id="usernameColumn" maxWidth="5000.0" minWidth="10.0" prefWidth="150.0" text="USERNAME" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </TableView>
               </children>
               <BorderPane.margin>
                  <Insets bottom="10.0" />
               </BorderPane.margin>
            </VBox>
         </center>
         <top>
            <Label text="Users List" BorderPane.alignment="CENTER">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
               <BorderPane.margin>
                  <Insets bottom="20.0" />
               </BorderPane.margin>
            </Label>
         </top>
      </BorderPane>
   </children>
</AnchorPane>
