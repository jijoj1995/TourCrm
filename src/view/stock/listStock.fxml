<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXTextField?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="stockListAnchorPane" stylesheets="/resource/css/listcustomer.css" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.stock.ListStock">
   <children>
      <VBox layoutX="20.0" layoutY="60.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <VBox alignment="TOP_CENTER" maxHeight="50.0" VBox.vgrow="NEVER">
               <children>
                  <Label text="Stock List">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Label>
               </children></VBox>
            <HBox id="HBox" alignment="CENTER" spacing="10.0" VBox.vgrow="NEVER">
               <children>
                  <Label text="Filter Table:" HBox.hgrow="ALWAYS">
                     <font>
                        <Font name="Verdana" size="14.0" />
                     </font>
                  </Label>
                  <JFXTextField fx:id="filterField" prefHeight="25.0" prefWidth="300.0" />
                  <FontAwesomeIconView fill="#022f02" glyphName="PLUS_CIRCLE" onMouseClicked="#showStockAddPage" size="50" strokeType="OUTSIDE" strokeWidth="0.0" HBox.hgrow="ALWAYS">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </FontAwesomeIconView>
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </HBox>
            <TableView fx:id="stockTable" style="-fx-border-radius: 100;" tableMenuButtonVisible="false" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="stockIdColumn" maxWidth="5000.0" minWidth="10.0" prefWidth="120.0" text="ID" />
                    <TableColumn fx:id="stockNameColumn" maxWidth="5000.0" minWidth="10.0" prefWidth="120.0" text="NAME" />
                    <TableColumn fx:id="stockCategoryColumn" maxWidth="5000.0" minWidth="10.0" prefWidth="120.0" text="CATEGORY" />
                    <TableColumn fx:id="stockLeftColumn" maxWidth="5000.0" minWidth="10.0" prefWidth="120.0" text="STOCK LEFT" />
                    <TableColumn fx:id="stockOriginalPriceColumn" maxWidth="5000.0" minWidth="10.0" prefWidth="120.0" text="ORIGINAL PRICE" />
                    <TableColumn fx:id="stockSellingPriceColumn" maxWidth="5000.0" minWidth="10.0" prefWidth="120.0" text="SELLING PRICE" />
                    <TableColumn fx:id="stockSupplierColumn" maxWidth="5000.0" minWidth="10.0" prefWidth="120.0" text="SUPPLIER" />
                </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </TableView>
         </children>
      </VBox>
   </children>

</AnchorPane>
