<StackPane fx:id="mainPane" prefHeight="1120.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.query.ListQueries">
   <children>
      <VBox alignment="CENTER" prefHeight="378.0" prefWidth="952.0" styleClass="box-white">
         <children>
            <HBox id="HBox" alignment="CENTER_RIGHT" spacing="10.0" styleClass="box-white">
               <children>
                  <Label text="Search:" HBox.hgrow="ALWAYS">
                     <font>
                        <Font name="Verdana" size="14.0" />
                     </font>
                  </Label>
                  <JFXTextField fx:id="filterField" prefHeight="25.0" />
                  <FontAwesomeIconView fill="#022f02" glyphName="PLUS_CIRCLE" size="35" strokeType="OUTSIDE" strokeWidth="0.0">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </FontAwesomeIconView>
               </children>
               <padding>
                  <Insets right="15.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER" prefHeight="283.0" prefWidth="940.0" spacing="10.0" VBox.vgrow="ALWAYS">
               <children>
                  <TableView fx:id="queriesTable" style="-fx-border-radius: 0px;;" tableMenuButtonVisible="false">
                     <columns>
                        <TableColumn fx:id="idColumn" maxWidth="5000.0" minWidth="10.0" prefWidth="50.0" text="ID" />
                        <TableColumn fx:id="firstNameColumn" maxWidth="5000.0" minWidth="10.0" prefWidth="250.0" text="FIRST NAME" />
                        <TableColumn fx:id="lastNameColumn" maxWidth="5000.0" minWidth="10.0" prefWidth="250.0" text="LAST NAME" />
                        <TableColumn fx:id="branchCodeColumn" maxWidth="5000.0" minWidth="10.0" prefWidth="150.0" text="BRANCH CODE" />
                        <TableColumn fx:id="emailColumn" maxWidth="5000.0" minWidth="10.0" prefWidth="150.0" text="EMAIL" />
                        <TableColumn fx:id="callReasonColumn" maxWidth="5000.0" minWidth="10.0" prefWidth="200.0" text="CALL REASON" />
                        <TableColumn fx:id="employeeColumn" maxWidth="5000.0" minWidth="10.0" prefWidth="200.0" text="EMPLOYEE" />
                        <TableColumn fx:id="actionColumn" maxWidth="5000.0" minWidth="10.0" prefWidth="150.0" text="ACTION" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets top="20.0" />
         </padding>
      </VBox>
   </children>
   <stylesheets>
      <URL value="@/com/gn/theme/css/material-color.css" />
