<?xml version="1.0" encoding="UTF-8"?>

<?import com.gn.lab.GNButton?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:id="mainPane" prefHeight="1120.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.users.EditUser">
   <stylesheets>
      <URL value="@../../theme/css/material-color.css" />
      <URL value="@../../theme/css/skeleton.css" />
      <URL value="@../../theme/css/light.css" />
      <URL value="@../../theme/css/bootstrap.css" />
      <URL value="@../../theme/css/simple-green.css" />
      <URL value="@../../theme/css/shape.css" />
      <URL value="@../../theme/css/typographic.css" />
      <URL value="@../../theme/css/helpers.css" />
      <URL value="@../../theme/css/master.css" />
   </stylesheets>
   <children>
      <VBox>
         <children>
            <HBox alignment="TOP_RIGHT">
               <children>
                  <VBox alignment="TOP_RIGHT" HBox.hgrow="NEVER">
                     <children>
                        <FontAwesomeIconView fx:id="backIcon" fill="#022f02" glyphName="ARROW_CIRCLE_LEFT" onMouseClicked="#showUserListPage" size="35" strokeType="OUTSIDE" strokeWidth="0.0">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </FontAwesomeIconView>
                     </children>
                  </VBox>
               </children>
               <VBox.margin>
                  <Insets right="10.0" />
               </VBox.margin>
            </HBox>
            <TabPane fx:id="userTabs" prefHeight="200.0" prefWidth="250.0" tabClosingPolicy="UNAVAILABLE">
               <tabs>
                  <Tab text="General">
                     <content>
                        <VBox spacing="25.0">
                           <children>
                              <HBox nodeOrientation="LEFT_TO_RIGHT" spacing="70.0">
                                 <children>
                                    <HBox HBox.hgrow="ALWAYS">
                                       <children>
                                          <Label prefHeight="27.0" prefWidth="100.0" styleClass="detailsVboxLabel" text="First Name:" HBox.hgrow="ALWAYS" />
                                          <JFXTextField fx:id="firstName" prefColumnCount="0" prefHeight="25.0" prefWidth="177.0" promptText="Enter First Name..." HBox.hgrow="ALWAYS" />
                                       </children>
                                       <opaqueInsets>
                                          <Insets right="10.0" />
                                       </opaqueInsets>
                                       <HBox.margin>
                                          <Insets />
                                       </HBox.margin>
                                    </HBox>
                                    <HBox HBox.hgrow="ALWAYS">
                                       <children>
                                          <Label prefHeight="25.0" prefWidth="100.0" styleClass="detailsVboxLabel" text="User Name:" HBox.hgrow="ALWAYS" />
                                          <JFXTextField fx:id="userId" prefHeight="25.0" prefWidth="150.0" promptText="Enter User Name..." HBox.hgrow="ALWAYS" />
                                       </children>
                                    </HBox>
                                 </children>
                              </HBox>
                              <HBox nodeOrientation="LEFT_TO_RIGHT" spacing="70.0">
                                 <children>
                                    <HBox HBox.hgrow="ALWAYS">
                                       <children>
                                          <Label prefHeight="27.0" prefWidth="100.0" styleClass="detailsVboxLabel" text="Last Name:" HBox.hgrow="ALWAYS" />
                                          <JFXTextField fx:id="lastName" prefColumnCount="0" prefHeight="25.0" prefWidth="177.0" promptText="Enter Last Name..." HBox.hgrow="ALWAYS" />
                                       </children>
                                       <opaqueInsets>
                                          <Insets right="10.0" />
                                       </opaqueInsets>
                                       <HBox.margin>
                                          <Insets />
                                       </HBox.margin>
                                    </HBox>
                                    <HBox HBox.hgrow="ALWAYS">
                                       <children>
                                          <Label prefHeight="25.0" prefWidth="100.0" styleClass="detailsVboxLabel" text="Email ID:" HBox.hgrow="ALWAYS" />
                                          <JFXTextField fx:id="email" prefHeight="25.0" prefWidth="150.0" promptText="Enter Email..." HBox.hgrow="ALWAYS" />
                                       </children>
                                    </HBox>
                                 </children>
                              </HBox>
                              <HBox nodeOrientation="LEFT_TO_RIGHT" spacing="70.0">
                                 <children>
                                    <HBox HBox.hgrow="ALWAYS">
                                       <children>
                                          <Label prefHeight="27.0" prefWidth="100.0" styleClass="detailsVboxLabel" text="Password:" HBox.hgrow="ALWAYS" />
                                          <JFXPasswordField fx:id="passwordField" promptText="Enter Password..." />
                                       </children>
                                       <opaqueInsets>
                                          <Insets right="10.0" />
                                       </opaqueInsets>
                                       <HBox.margin>
                                          <Insets />
                                       </HBox.margin>
                                    </HBox>
                                 </children>
                              </HBox>
                           </children>
                           <padding>
                              <Insets left="50.0" right="50.0" top="20.0" />
                           </padding>
                        </VBox>
                     </content>
                  </Tab>
               </tabs>
            </TabPane>
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <HBox spacing="30.0" style="-fx-min-width: ;" styleClass="customerSaveButtonGroup" HBox.hgrow="NEVER">
                     <children>
                        <GNButton buttonType="DIAGONAL_SWIPE" onMouseClicked="#saveUserData" prefHeight="35.0" prefWidth="130.0" styleClass="buttonPrimary" text="Save">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </GNButton>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="40.0" right="40.0" top="10.0" />
                     </padding>
                  </HBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</StackPane>
